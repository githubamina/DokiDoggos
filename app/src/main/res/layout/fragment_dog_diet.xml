<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DietFragments.DogsPersonalDietFragment">

    <Button
        android:id="@+id/edit_button"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"/>

    <Button
        android:id="@+id/reminder_button"

        android:layout_marginTop="110dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reminder"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="40dp">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="200dp" />

        <TextView
            android:id="@+id/name_diet_prof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:padding="20dp"
            android:textSize="40sp"
            android:fontFamily="@font/adam"
            android:textStyle="bold"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Daily foods:"
           android:textSize="28sp"
           android:fontFamily="@font/adam"
           android:textStyle="bold"
           android:paddingBottom="20dp"/>
        <TextView
            android:id="@+id/daily_foods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            style="@style/basicText"
            android:textStyle="italic"
            android:text=""/>
        <View
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily treats:"
            android:textSize="28sp"
            android:fontFamily="@font/adam"
            android:textStyle="bold"
            android:paddingBottom="20dp"/>
        <TextView
            android:id="@+id/daily_treats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            style="@style/basicText"
            android:textStyle="italic"
            android:text=""/>
        <View
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feeding schedule"
            android:textSize="28sp"
            android:fontFamily="@font/adam"
            android:textStyle="bold"
            android:paddingBottom="20dp"/>
        <TextView
            android:id="@+id/feeding_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            style="@style/basicText"
            android:textStyle="italic"
            android:text=""/>
        <View
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food allergies:"
            android:textSize="28sp"
            android:fontFamily="@font/adam"
            android:textStyle="bold"
            android:paddingBottom="20dp"/>
        <TextView
            android:id="@+id/food_allergies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            style="@style/basicText"
            android:textStyle="italic"
            android:text=""/>
        <View
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feeding method:"
            android:textSize="28sp"
            android:fontFamily="@font/adam"
            android:textStyle="bold"
            android:paddingBottom="20dp"/>
        <TextView
            android:id="@+id/feeding_methods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            style="@style/basicText"
            android:textStyle="italic"
            android:text=""/>
        <View
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Occasional treats:"
            android:textSize="28sp"
            android:fontFamily="@font/adam"
            android:textStyle="bold"
            android:paddingBottom="20dp"/>
        <TextView
            android:id="@+id/occasional_treats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            style="@style/basicText"
            android:textStyle="italic"
            android:text=""/>
        <View
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other notes:"
            android:textSize="28sp"
            android:fontFamily="@font/adam"
            android:textStyle="bold"
            android:paddingBottom="20dp"/>
        <TextView
            android:id="@+id/notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            style="@style/basicText"
            android:textStyle="italic"
            android:text=""/>
        <View
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            />

            </LinearLayout>

        </ScrollView>


    </LinearLayout>
</FrameLayout>