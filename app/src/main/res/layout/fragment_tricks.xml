<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FunFragments.Tricks">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">


       <LinearLayout

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:gravity="center">

           <TextView
               android:layout_marginTop="80dp"
               android:layout_marginBottom="40dp"
               android:text="Tricks to teach your pet"
               android:textAlignment="center"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />

           <ImageView
               android:scaleType="fitXY"
               android:id="@+id/roll_img"
               android:layout_marginBottom="40dp"
               android:layout_width="300dp"
               android:layout_height="150dp" />
           <ImageView
               android:scaleType="fitXY"
               android:id="@+id/bang_img"
               android:layout_marginBottom="40dp"
               android:layout_width="300dp"
               android:layout_height="150dp" />
           <ImageView
               android:scaleType="fitXY"
               android:id="@+id/spin_img"
               android:layout_marginBottom="40dp"
               android:layout_width="300dp"
               android:layout_height="150dp" />
           <ImageView
               android:scaleType="fitXY"
               android:id="@+id/shake_img"
               android:layout_marginBottom="40dp"
               android:layout_width="300dp"
               android:layout_height="150dp" />
           <ImageView
               android:scaleType="fitXY"
               android:id="@+id/kiss_img"
               android:layout_marginBottom="40dp"
               android:layout_width="300dp"
               android:layout_height="150dp" />
           <ImageView
               android:scaleType="fitXY"
               android:id="@+id/dance_img"
               android:layout_marginBottom="40dp"
               android:layout_width="300dp"
               android:layout_height="150dp" />
           <ImageView
               android:scaleType="fitXY"
               android:id="@+id/speak_img"
               android:layout_marginBottom="40dp"
               android:layout_width="300dp"
               android:layout_height="150dp" />
           <ImageView
               android:scaleType="fitXY"
               android:id="@+id/high_five_img"
               android:layout_marginBottom="40dp"
               android:layout_width="300dp"
               android:layout_height="150dp" />
           <ImageView
               android:scaleType="fitXY"
               android:id="@+id/crawl_img"
               android:layout_marginBottom="40dp"
               android:layout_width="300dp"
               android:layout_height="150dp" />
           <ImageView
               android:scaleType="fitXY"
               android:id="@+id/bow_img"
               android:layout_marginBottom="40dp"
               android:layout_width="300dp"
               android:layout_height="150dp" />
           <ImageView
               android:scaleType="fitXY"
               android:id="@+id/beg_img"
               android:layout_marginBottom="40dp"
               android:layout_width="300dp"
               android:layout_height="150dp" />





       </LinearLayout>


   </ScrollView>

</FrameLayout>