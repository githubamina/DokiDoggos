<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FunFragments.DogsPersonalExerciseFragment">


    <Button
        android:id="@+id/exercise_edit_button"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"/>

    <Button
        android:id="@+id/exercise_reminder_button"

        android:layout_marginTop="110dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reminder"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="40dp">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/name_exercise_prof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:padding="20dp"
            android:textSize="40sp"
            android:fontFamily="@font/adam"
            android:textStyle="bold"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Walking Schedule:"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:fontFamily="@font/adam"
                    android:textStyle="bold"
                    android:paddingBottom="20dp"/>
                <TextView
                    android:id="@+id/walkies_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    style="@style/basicText"
                    android:textStyle="italic"
                    android:text=""/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Favourite Games"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:fontFamily="@font/adam"
                    android:textStyle="bold"
                    android:paddingBottom="20dp"/>
                <TextView
                    android:id="@+id/games_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    style="@style/basicText"
                    android:textStyle="italic"
                    android:text=""/>
                <View
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Favourite Toys:"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:fontFamily="@font/adam"
                    android:textStyle="bold"
                    android:paddingBottom="20dp"/>
                <TextView
                    android:id="@+id/toys_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    style="@style/basicText"
                    android:textStyle="italic"
                    android:text=""/>
                <View
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    />



                <TextView
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tricks:"
                    android:textSize="30sp"
                    android:fontFamily="@font/adam"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Roll Over:"
                    android:textSize="28sp"
                    android:fontFamily="@font/adam"
                    android:textStyle="bold"
                    android:paddingBottom="20dp"/>

                <RatingBar
                    android:numStars="5"
                    android:id="@+id/roll_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



                <TextView
                    android:id="@+id/roll_over"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    style="@style/basicText"
                    android:textStyle="italic"
                    android:text=""/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bang!:"
                    android:textSize="28sp"
                    android:fontFamily="@font/adam"
                    android:textStyle="bold"
                    android:paddingBottom="20dp"/>

                <RatingBar
                    android:numStars="5"
                    android:id="@+id/bang_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/bang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    style="@style/basicText"
                    android:textStyle="italic"
                    android:text=""/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spin:"
                    android:textSize="28sp"
                    android:fontFamily="@font/adam"
                    android:textStyle="bold"
                    android:paddingBottom="20dp"/>

                <RatingBar
                    android:numStars="5"
                    android:id="@+id/spin_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/spin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    style="@style/basicText"
                    android:textStyle="italic"
                    android:text=""/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shake:"
                    android:textSize="28sp"
                    android:fontFamily="@font/adam"
                    android:textStyle="bold"
                    android:paddingBottom="20dp"/>

                <RatingBar
                    android:numStars="5"
                    android:id="@+id/shake_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/shake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    style="@style/basicText"
                    android:textStyle="italic"
                    android:text=""/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kiss:"
                    android:textSize="28sp"
                    android:fontFamily="@font/adam"
                    android:textStyle="bold"
                    android:paddingBottom="20dp"/>

                <RatingBar
                    android:numStars="5"
                    android:id="@+id/kiss_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/kiss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    style="@style/basicText"
                    android:textStyle="italic"
                    android:text=""/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dance:"
                    android:textSize="28sp"
                    android:fontFamily="@font/adam"
                    android:textStyle="bold"
                    android:paddingBottom="20dp"/>
                <RatingBar
                    android:numStars="5"
                    android:id="@+id/dance_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/dance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    style="@style/basicText"
                    android:textStyle="italic"
                    android:text=""/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speak:"
                    android:textSize="28sp"
                    android:fontFamily="@font/adam"
                    android:textStyle="bold"
                    android:paddingBottom="20dp"/>

                <RatingBar
                    android:numStars="5"
                    android:id="@+id/speak_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/speak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    style="@style/basicText"
                    android:textStyle="italic"
                    android:text=""/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High Five:"
                    android:textSize="28sp"
                    android:fontFamily="@font/adam"
                    android:textStyle="bold"
                    android:paddingBottom="20dp"/>

                <RatingBar
                    android:numStars="5"
                    android:id="@+id/high_five_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/high_five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    style="@style/basicText"
                    android:textStyle="italic"
                    android:text=""/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crawl:"
                    android:textSize="28sp"
                    android:fontFamily="@font/adam"
                    android:textStyle="bold"
                    android:paddingBottom="20dp"/>

                <RatingBar
                    android:numStars="5"
                    android:id="@+id/crawl_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/crawl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    style="@style/basicText"
                    android:textStyle="italic"
                    android:text=""/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wave:"
                    android:textSize="28sp"
                    android:fontFamily="@font/adam"
                    android:textStyle="bold"
                    android:paddingBottom="20dp"/>


                <RatingBar
                    android:numStars="5"
                    android:id="@+id/wave_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/wave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    style="@style/basicText"
                    android:textStyle="italic"
                    android:text=""/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bow:"
                    android:textSize="28sp"
                    android:fontFamily="@font/adam"
                    android:textStyle="bold"
                    android:paddingBottom="20dp"/>

                <RatingBar
                    android:numStars="5"
                    android:id="@+id/bow_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/bow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    style="@style/basicText"
                    android:textStyle="italic"
                    android:text=""/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beg:"
                    android:textSize="28sp"
                    android:fontFamily="@font/adam"
                    android:textStyle="bold"
                    android:paddingBottom="20dp"/>

                <RatingBar
                    android:numStars="5"
                    android:id="@+id/beg_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/beg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    style="@style/basicText"
                    android:textStyle="italic"
                    android:text=""/>
                <View
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notes: "
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:fontFamily="@font/adam"
                    android:textStyle="bold"
                    android:paddingBottom="20dp"/>
                <TextView
                    android:id="@+id/notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    style="@style/basicText"
                    android:textStyle="italic"
                    android:text=""/>

               

            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</FrameLayout>