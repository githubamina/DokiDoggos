<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DietFragments.HowToFeedFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How To Feed Your Dog"
                android:textAlignment="center"
                android:layout_marginTop="80dp"
                android:textSize="40sp"
                android:padding="20dp"
                android:fontFamily="@font/adam"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/how_to_intro"
                style="@style/basicText" />

            <TableLayout
                android:layout_height="wrap_content"
                android:id="@+id/TableLayout01"
                android:layout_width="match_parent"
                android:layout_margin="20dp">

                <TableRow>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="•"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textSize="28sp"/>

                    <TextView
                        android:id="@+id/allocate_area"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Allocate special\nfeeding areas"
                        android:textSize="28sp"
                        android:fontFamily="@font/adam"
                        android:textStyle="bold"
                        android:paddingBottom="20dp"
                        />
                </TableRow>






                <TableRow>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="•"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textSize="28sp"
                        />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Allocate special\nfeeding times"
                        android:textSize="28sp"
                        android:fontFamily="@font/adam"
                        android:textStyle="bold"
                        android:paddingBottom="25dp"
                        />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="•"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textSize="28sp"
                        android:fontFamily="@font/adam"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Make feeding time\na game"
                        android:textSize="28sp"
                        android:fontFamily="@font/adam"
                        android:textStyle="bold"
                        android:paddingBottom="20dp"
                        />
                </TableRow>


                <TableRow>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="•"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textSize="28sp"
                        android:fontFamily="@font/adam"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Use special\nbowls"
                        android:textSize="28sp"
                        android:fontFamily="@font/adam"
                        android:textStyle="bold"
                        android:paddingBottom="50dp"
                        />
                </TableRow>

            </TableLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Allocate special\nfeeding areas"
                android:textSize="30sp"
                android:textAlignment="center"
                android:fontFamily="@font/adam"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/food_areas"
                style="@style/basicText"
                android:layout_marginBottom="50dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Allocate special\nfeeding times"
                android:textSize="30sp"
                android:textAlignment="center"
                android:fontFamily="@font/adam"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feeding_times"
                style="@style/basicText"
                android:layout_marginBottom="50dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Make feeding time\na game"
                android:textSize="30sp"
                android:textAlignment="center"
                android:fontFamily="@font/adam"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/games"
                style="@style/basicText"
                android:layout_marginBottom="50dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Use special\nbowls"
                android:textSize="30sp"
                android:textAlignment="center"
                android:fontFamily="@font/adam"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bowls"
                style="@style/basicText"
                android:layout_marginBottom="50dp"/>







        </LinearLayout>

    </ScrollView>

</FrameLayout>